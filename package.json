{
  "name": "bead-javascript-tests",
  "version": "1.0.0",
  "description": "JavaScript unit tests for bead deployment code",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/javascript/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "bead/deployment/jspsych/plugins/*.js",
      "!**/node_modules/**",
      "!**/*.template.js"
    ],
    "coverageThreshold": null
  }
}
